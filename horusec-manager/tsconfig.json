{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./src",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "cypress"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "isolatedModules": true
  },
  "include": [
    "src",
    "cypress"
  ],
  "paths": {
    "components/*": [
      "components/*"
    ],
    "pages/*": [
      "pages/*"
    ],
    "assets/*": [
      "assets/*"
    ],
    "helpers/*": [
      "helpers/*"
    ],
    "services/*": [
      "services/*"
    ],
    "contexts/*": [
      "contexts/*"
    ]
  }
}
